<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:background="@color/white"
    tools:context=".EditProfileActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-10dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="35dp">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/periwinkle"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginBottom="-30dp"
        app:cardElevation="15dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="70dp">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow2"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        app:cardElevation="15dp"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/palePink"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:cardElevation="15dp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/skinColor"/>
    </androidx.cardview.widget.CardView>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="20dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/opensans"
            android:textSize="22sp"
            android:text="Edit Your Profile"
            android:textAlignment="center"
            android:textStyle="bold"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivpsaprofilepic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profpiclogo"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/yellow2"/>

                    <ImageView
                        android:id="@+id/ivpsaaddpic"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="2dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_add"/>
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/opensans"
                    android:textSize="15sp"
                    android:text="Add a photo"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="160dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/ivpsamale"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/profpiclogo"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/orange"/>

                    <ImageView
                        android:id="@+id/ivpsafemale"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="90dp"
                        android:src="@drawable/femaleprofpic"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/orange"/>
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/opensans"
                    android:textSize="15sp"
                    android:text="Choose an avatar"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/opensans"
                android:textSize="15sp"
                android:text="OR"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </RelativeLayout>



        <EditText
            android:id="@+id/etpsafullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="30dp"
            android:padding="13dp"
            android:elevation="7dp"
            android:maxLines="1"
            android:hint="Full Name"
            android:fontFamily="@font/opensans"
            android:background="@drawable/rounded_card_corners"
            android:backgroundTint="@color/lightSkin"
            android:inputType="textCapWords"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/etpsaemailadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="15dp"
            android:padding="13dp"
            android:elevation="7dp"
            android:maxLines="1"
            android:hint="Email Address"
            android:fontFamily="@font/opensans"
            android:background="@drawable/rounded_card_corners"
            android:backgroundTint="@color/periwinkle"
            android:inputType="textEmailAddress"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"/>



        <TextView
            android:id="@+id/tvpsacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="60dp"
            android:padding="13dp"
            android:elevation="7dp"
            android:hint="City"
            android:fontFamily="@font/opensans"
            android:background="@drawable/rounded_card_corners"
            android:backgroundTint="@color/palePink"
            android:inputType="textCapWords"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvpsastate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="15dp"
            android:padding="13dp"
            android:elevation="7dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="60dp"
            android:hint="State"
            android:fontFamily="@font/opensans"
            android:background="@drawable/rounded_card_corners"
            android:backgroundTint="@color/skinColor"
            android:inputType="textCapWords"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"/>


        <Button
            android:id="@+id/btnpsasubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/opensans"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_card_corners"
            android:backgroundTint="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:elevation="10dp"
            android:textStyle="bold"
            android:text="Submit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="390dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ivlocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_gps"
                android:padding="10dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/colorPrimary"/>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/opensans"
            android:textSize="14sp"
            android:text="From GPS"
            android:textAlignment="center"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>