<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:background="@color/white"
    tools:context=".EnterNumberActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-10dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="35dp">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/periwinkle"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginBottom="-30dp"
        app:cardElevation="15dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="70dp">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow2"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        app:cardElevation="15dp"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/palePink"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:cardElevation="15dp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/skinColor"/>
    </androidx.cardview.widget.CardView>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:layout_marginTop="100dp"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/opensans"
            android:textSize="26sp"
            android:text="Login"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etenaphoneno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="70dp"
            android:padding="15dp"
            android:elevation="7dp"
            android:maxLength="10"
            android:maxLines="1"
            android:hint="10-digit Mobile Number"
            android:fontFamily="@font/opensans"
            android:background="@drawable/rounded_card_corners"
            android:backgroundTint="@color/lightSkin"
            android:inputType="phone"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/etenapassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textColorHint="@color/black"
            android:padding="15dp"
            android:hint="Password"
            android:elevation="7dp"
            android:maxLines="1"
            android:fontFamily="@font/opensans"
            android:background="@drawable/rounded_card_corners"
            android:backgroundTint="@color/palePink"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/opensans"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_card_corners"
            android:backgroundTint="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:elevation="10dp"
            android:textStyle="bold"
            android:text="Login"/>




        <LinearLayout
            android:id="@+id/llasksignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/opensans"
                android:textSize="15sp"
                android:text="Don't have an account?"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/opensans"
                android:textSize="15sp"
                android:text="Sign Up!"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>